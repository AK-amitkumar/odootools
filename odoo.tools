# ODOOPROJECT=<default project>
# DATABASES=<default databases [list] >
# MODULES=<default modules>
# ODOORESTART=<special odoo restart command>
# List addons directories in ODOOADDONS-variable
export ODOOADDONS=
#export ODOOADDONS=`ls -dxm /usr/share/odoo-* /usr/share/oca-*|tr -d " \n"`
CMD="s/^addons_path=.*/addons_path=${ODOOADDONS//"/"/"\/"}/g"
sudo perl -i -pe $CMD /etc/odoo/openerp-server.conf
# Save the new addons_path in conf-file
